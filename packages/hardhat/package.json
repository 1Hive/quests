  "scripts": {
    "chain": "hardhat node --hostname 0.0.0.0 --network hardhat --no-deploy",
    "fork": "hardhat node --fork https://mainnet.infura.io/v3/460f40a260564ac4a4f4b3fffb032dad",
    "test": "hardhat test --network hardhat",
    "test-coverage": "hardhat coverage --network hardhat --testfiles \"test/*.test.js\" --solcoverjs ./test/coverage.solcover.js",
    "compile": "hardhat compile",
    "deploy:rinkeby": "hardhat --network rinkeby deploy --export-all ../react-app/src/contracts/hardhat_contracts.json",
    "deploy:xdai": "hardhat --network xdai deploy --export-all ../react-app/src/contracts/hardhat_contracts.json",
    "deploy:local": "hardhat --network hardhat deploy --export-all ../react-app/src/contracts/hardhat_contracts.json",
    "postdeploy": "hardhat run scripts/publish.js",
    "watch": "node scripts/watch.js",
    "accounts": "hardhat accounts",
    "balance": "hardhat balance",
    "send": "hardhat send",
    "generate": "hardhat generate",
